<% if @song.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@song.errors.count, "error") %>
      prohibited this article from being saved:
    </h2>

    <ul>
    <% @song.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<h1><New Song</h1>
<%= form_for(@song) do |f| %>
    <%= f.label :"Title:" %>
    <%= f.text_field :title %>

    <%= f.label :"Genre:" %>
    <%= f.text_field :genre %>

    <%= f.label :"Artist Name:" %>
    <%= f.text_field :artist_name%>

    <%= f.label :"Released:" %>
    <%= f.check_box :released%>

    <%= f.label :"Release Year:" %>
    <%= f.number_field :release_year%>

    <%= f.submit "New Song!" %>
    <% end %> 
